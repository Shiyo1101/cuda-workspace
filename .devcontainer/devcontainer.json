{
    "name": "cuda-workspace",
    "build": {
        // デフォルトはTensorFlow 2.17.0のDockerfileを使用
        // 必要に応じて変更可能
        "dockerfile": "../docker/tensorflow-latest/Dockerfile",
        "args": {
            "USER_UID": "enter your uid. if check own uid, run command: id -u",
            "USER_GID": "enter your gid. if check own gid, run command: id -g",
            "USERNAME": "enter your username. if check own username, run command: whoami"
        }
    },
    "remoteUser": "enter the username",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "charliermarsh.ruff",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                "kevinrose.vsc-python-indent",
                "mhutchie.git-graph",
                "seatonjiang.gitmoji-vscode",
                "tamasfe.even-better-toml",
                "ionutvmi.path-autocomplete"
            ]
        }
    },
    // コンテナのワークスペースを指定
    "workspaceFolder": "/cuda-workspace",
    "forwardPorts": [
        8000
    ],
    // Dockerコンテナ実行時の引数 (GPUを使用するために必要)
    "runArgs": [
        "--gpus",
        "all"
    ],
    "mounts": [
        "source=${localWorkspaceFolder},target=/cuda-workspace,type=bind,consistency=cached"
    ]
}